{
  "name": "profanity-check-api",
  "module": "src/index.ts",
  "type": "module",
  "devDependencies": {
    "@types/bun": "latest",
    "@types/node": "^20.14.10",
    "@typescript-eslint/eslint-plugin": "^7.16.0",
    "@typescript-eslint/parser": "^7.16.0",
    "eslint": "^9.6.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-prettier": "^5.1.3",
    "prettier": "^3.3.2",
    "ts-node": "^10.9.2",
    "tsconfig-paths": "^4.2.0",
    "typescript": "^5.5.3"
  },
  "scripts": {
    "start": "bun run src/index.ts",
    "dev": "bun run --watch src/index.ts",
    "build": "tsc",
    "lint": "eslint 'src/**/*.ts'",
    "format": "prettier --write 'src/**/*.ts'",
    "typeorm": "NODE_OPTIONS='--loader ts-node/esm' ts-node ./node_modules/typeorm/cli.js",
    "migration:generate": "bun run typeorm migration:generate -d src/config/database.ts",
    "migration:run": "bun typeorm migration:run -d src/config/database.ts",
    "seed:profanity": "bun run src/seeders/profanitySeeder.ts",
    "db:drop": "bun run typeorm schema:drop -d src/config/database.ts"
  },
  "peerDependencies": {
    "typescript": "^5.0.0"
  },
  "dependencies": {
    "csv-parse": "^5.5.6",
    "hono": "^4.4.12",
    "mysql2": "^3.10.2",
    "reflect-metadata": "^0.2.2",
    "typeorm": "^0.3.20",
    "zod": "^3.23.8"
  }
}